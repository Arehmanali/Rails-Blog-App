<div class="container text-center">
  <div class="form">
    <h1>Log In</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form-label">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email,required: false, autofocus: true, placeholder: "Email",size: 52, input_html: { autocomplete: "email" }%>
        <br>
        <br>
        <div class="form-label">
          <%= f.label :password %>
        </div>
        <%= f.text_field :password,required: false, placeholder: "Password",size: 52, input_html: { autocomplete: "current-password" }%>
        <br>
        <br>
        <div class="form-label">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
        <div class="form-actions">
          <%= f.button :submit, "Login In", class: "btn btn-info"%>
          <%= render 'devise/shared/links'%>
        </div>
    <% end %>
  </div>
</div>
