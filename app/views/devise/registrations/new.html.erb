<div class="container text-center">
  <div class="form">
    <h1>Sign up</h1>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="form-label">
          <%= f.label :email %>
        </div>
        <%= f.text_field :email,required: true, autofocus: true, placeholder: "Email",size: 52, input_html: { autocomplete: "email" }%>
        <br>
        <br>
        <div class="form-label">
          <%= f.label :password %>
        </div>
        <%= f.text_field :password,required: true, placeholder: "Password",size: 52, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }%>
        <br>
        <br>
        <div class="form-label">
          <%= f.label :password_confirmation %>
        </div>
        <%= f.text_field :password_confirmation,required: true, placeholder: "Confirm Password",size: 52, input_html: { autocomplete: "new-password" }%>
        <br>
        <br>
      </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: "btn btn-info"%>
          <%= render 'devise/shared/links'%>
        </div>
    <% end %>
  </div>
</div>
